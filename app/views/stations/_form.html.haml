= form_for @station do |f|
  - if @station.errors.any?
    #error_explanation
      %h2= "#{pluralize(@station.errors.count, "error")} prohibited this station from being saved:"
      %ul
        - @station.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :place_id
    = f.number_field :place_id
  .field
    = f.label :receiver_id
    = f.number_field :receiver_id
  .actions
    = f.submit 'Save'
