= form_for @receiver do |f|
  - if @receiver.errors.any?
    #error_explanation
      %h2= "#{pluralize(@receiver.errors.count, "error")} prohibited this receiver from being saved:"
      %ul
        - @receiver.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
