= form_for @beacon_holder do |f|
  - if @beacon_holder.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beacon_holder.errors.count, "error")} prohibited this beacon_holder from being saved:"
      %ul
        - @beacon_holder.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :beacon_id
    = f.number_field :beacon_id
  .field
    = f.label :patient_id
    = f.number_field :patient_id
  .actions
    = f.submit 'Save'
