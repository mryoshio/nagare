%h1= t('patients.index.title')
%table.table.table-striped.table-hover
  %tr
    %th= Patient.human_attribute_name(:name)
    %th
    %th
    %th
  - @patients.each do |patient|
    %tr
      %td= patient.name
      %td= link_to t('action.show'), patient
      %td= link_to t('action.edit'), edit_patient_path(patient)
      %td= link_to t('action.destroy'), patient, method: :delete, data: { confirm: t('action.destroy_confirm') }
= link_to t('patients.new.title'), new_patient_path
