.panel.panel-default
  .panel-heading= t :beacon_menu
  .panel-body
    .list-group
      - if beacon_holder_is_creatable?
        %a{ href: beacon_holders_path, class: "list-group-item" }
          %h4{ class: "list-group-item-heading" }= t 'beacon_holders.index.title'
          %p{ class: "list-group-item-text" }= t 'beacon_holders.index.description'
      %a{ href: beacons_path, class: "list-group-item" }
        %h4{ class: "list-group-item-heading" }= t 'beacons.index.title'
        %p{ class: "list-group-item-text" }= t 'beacons.index.description'
      %a{ href: patients_path, class: "list-group-item" }
        %h4{ class: "list-group-item-heading" }= t 'patients.index.title'
        %p{ class: "list-group-item-text" }= t 'patients.index.description'
