      %a{ href: "#", class: "list-group-item list-group-item-success" }
        %h4{ class: "list-group-item-heading" }= t 'station.title'
        %p{ class: "list-group-item-text" }= t 'station.description'
      %a{ href: receivers_path, class: "list-group-item" }
        %h4{ class: "list-group-item-heading" }= t 'receiver.title'
        %p{ class: "list-group-item-text" }= t 'receiver.description'
      %a{ href: places_path, class: "list-group-item" }
        %h4{ class: "list-group-item-heading" }= t 'places.index.title'
        %p{ class: "list-group-item-text" }= t 'places.index.description'
